import axios from "axios";

const apiURL = process.env.REACT_APP_REQRES_API;

function getPessoas() {
  const response = axios.get(`http://localhost:4000/api/pessoas`);

  return response;
}

function getCreatedUser({ nome_completo }) {
  const response = axios.post(`http://localhost:4000/api/pessoas`, {
    nome_completo
  });

  return response;
}

function getUpdatedUser(id, user) {
  const response = axios.put(`http://localhost:4000/api/pessoas/${id}`, user);

  return response;
}

function getDeletedUser(id) {
  const response = axios.delete(`http://localhost:4000/api/pessoas/${id}`);

  return response;
}

function getImportedUser(file) {
	
  const response = axios.post(`http://localhost:4000/api/pessoas/import`);

  return response;
  
}

export { getPessoas, getCreatedUser, getUpdatedUser, getDeletedUser, getImportedUser };
